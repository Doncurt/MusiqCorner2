
  {{#if currentUser}}
  <div class="row">
    {{#posts}}
    <div class="col-sm-8 col-sm-offset-2">
      <li class="list-group-item">
        <a href="/posts/{{this._id}}" class="lead">{{this.title}}</a>
      </br>
        <p>Submitted by {{this.username}}<p>
        <a href="{{this.url}}" target="_blank">{{this.url}}<a>
          <div class="text-right">
          <a href="/n/{{this.subreddit}}">{{this.subreddit}}<a>
        </div>
        <form class="vote-up" data-id="{{post._id}}">
          <button type="submit">Vote Up</button>
        </form>

        <form class="vote-down" data-id="{{post._id}}">
          <button type="submit">Vote Down</button>
        </form>
      </li>
    </div>

      {{/posts}}
  {{else}}
  <div class= "header">

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <img src="singer1.jpg" alt="Los Angeles" style="width:100%;">
        <div class="carousel-caption">
          <h3>Post Your Talent!</h3>
        </div>
      </div>

      <div class="item">
        <img src="singer2.jpg" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
          <h3>Get FeedBack!</h3>
        </div>
      </div>

      <div class="item">
        <img src="singer3.jpg" alt="New York" style="width:100%;">
        <div class="carousel-caption">
          <h3>Improve!</h3>
        </div>
      </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="row">
  {{#posts}}
  <div class="col-sm-8 col-sm-offset-2">
    <li class="list-group-item">
      <a href="/posts/{{this._id}}" class="lead">{{this.title}}</a>
    </br>
      <p>Submitted by {{this.username}}<p>
      <a href="{{this.url}}" target="_blank">{{this.url}}<a>
        <div class="text-right">
        <a href="/n/{{this.subreddit}}">{{this.subreddit}}<a>
      </div>
      <form class="vote-up" data-id="{{post._id}}">
        <button type="submit">Vote Up</button>
      </form>

      <form class="vote-down" data-id="{{post._id}}">
        <button type="submit">Vote Down</button>
      </form>
    </li>
  </div>

    {{/posts}}

  {{/if}}
</div>
