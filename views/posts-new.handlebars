
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form method="POST" action="/posts">
      <legend>New Music Category</legend>
      <div class="form-group">
        <label for="subreddit">Category</label>
        <input type="text" name="category" class="form-control" id="post-category" placeholder="category" value="{{posts.category}}"></input>
      </div>
      <legend>New Video</legend>
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" name="title" class="form-control" id="post-title" placeholder="Title" value="{{posts.title}}"></input>
      </div>
      <div class="form-group">
        <label for="post-url">Url</label>
        <input type="url" name="url" class="form-control" id="post-url" placeholder="https://www.google.com" value="{{posts.url}}"></input>
      </div>
      <div class="form-group">
        <label for="post-video">Video</label>
        <textarea name="summary" class="form-control" id="post-summary" placeholder="Title" value="{{posts.summary}}"></textarea>
      </div>

      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Reply<button>
      </div>


    </form>
  </div>
</div>
